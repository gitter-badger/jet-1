# at some point checkc should output to a file not stdout
DIAG=


%.bin: %.ch chstd.h checkstd.h
	./comp $< $(DIAG) > $@.c && cc -O0 $@.c -o $@
#	rm $@.c

%-d.bin: %.ch chstd.h checkstd.h
	./comp $< $(DIAG) > $@.c && cc -O0 -g -Werror -DDEBUG $@.c -o $@
#	rm $@.c

%-f.bin: %.ch chstd.h checkstd.h
	./comp $< $(DIAG) > $@.c && cc -O3 -DNOSTACKCHECK -DNONULLCHECK -DNOBOUNDSCHECK $@.c -o $@
#	rm $@.c
